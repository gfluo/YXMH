<!DOCTYPE <!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= title %></title>
    <style>
        * {
            box-sizing: border-box;
            padding: 0;
            margin: 0;
        }
    </style>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/main.css">
    <script src="/js/jquery-3.0.0.min.js"></script>
    <script src="/js/resizeFontSize.js"></script>
    <script src="/js/logic.js"></script>
</head>

<body>
    <div class="header-navs">
        <% if (allShow == 'allShow') { %>
        <span class="nav-li active" id="allShow">全部</span>
        <% } else { %>
        <span class="nav-li" id="allShow">全部</span>
        <% } %>

        <% for(let i in menus){ %>
        <% if (fid == menus[i].fid) { %>
        <span class="nav-li active" id=<%= menus[i].fid %>><%= menus[i].name %></span>
        <% } else { %>
        <span class="nav-li" id=<%= menus[i].fid %>><%= menus[i].name %></span>
        <% } %>
        <% } %>

        <% for(let i in subMenus){ %>
        <% if (tid == subMenus[i].tid) { %>
        <span class="nav-li-sub active" id=<%= subMenus[i].tid %>><%= subMenus[i].subject %></span>
        <% } else { %>
        <span class="nav-li-sub" id=<%= subMenus[i].tid %>><%= subMenus[i].subject %></span>
        <% } %>
        <% } %>
    </div>
    <div class="list-wrap">
        <ul class="news-list">
            <% for(let i in articles){ %>
            <li>
                <div class="thumbnail">
                    <img src=<%= uidPic %> alt="">
                </div>
                <div class="info" id=<%= articles[i].tid %>>
                    <div class="title"><%= articles[i].subject %></div>
                    <div class="mark-box"><span class="mark-li">已推荐</span></div>
                    <div class="more-info"><span class="date"><%= articles[i].lastpost %></span><span
                            class="viewer">浏览：<%= articles[i].views %></span>
                    </div>
                </div>
            </li>
            <% } %>
